{
  "compilerOptions": {
    // "target": "es5",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@myComponents/*": ["src/components/*"],
      "@myPages/*": ["src/pages/*"],
      "@myUtils/*": ["src/utils/*"],
      "@myContexts/*": ["src/contexts/*"],
      "@myStyles/*": ["src/styles/*"],
      "@myFeaturesInterfaces/*": ["src/lib/featuresInterfaces/*"],
    },
    "experimentalDecorators": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
}
